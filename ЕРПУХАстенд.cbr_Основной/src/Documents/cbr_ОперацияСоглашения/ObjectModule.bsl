Процедура ОбработкаПроведения(Отказ, РежимПроведения)
	Движения.cbr_ОстаткиНоменклатурыПоСоглашению.Записывать = Истина;
	
	Запрос = Новый Запрос;
	Запрос.Текст =
		"ВЫБРАТЬ
		|	cbr_ОперацияСоглашенияСписокНоменклатура.Номенклатура КАК Номенклатура,
		|	cbr_ОперацияСоглашенияСписокНоменклатура.Характеристика КАК Характеристика,
		|	cbr_ОперацияСоглашенияСписокНоменклатура.Количество КАК Количество
		|ИЗ
		|	Документ.cbr_ОперацияСоглашения.СписокНоменклатура КАК cbr_ОперацияСоглашенияСписокНоменклатура
		|ГДЕ
		|	cbr_ОперацияСоглашенияСписокНоменклатура.Ссылка = &Ссылка";
	
	Запрос.УстановитьПараметр("Ссылка", Ссылка);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
	
	Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
		Движение = Движения.cbr_ОстаткиНоменклатурыПоСоглашению.Добавить();
		
		Если Действие = ПредопределенноеЗначение("Перечисление.cbr_ВидыДвиженияСоглашенияСКлиентами.Приход") Тогда
			Движение.ВидДвижения = ВидДвиженияНакопления.Приход;
			Движение.Период = Дата;
		ИначеЕсли Действие = ПредопределенноеЗначение("Перечисление.cbr_ВидыДвиженияСоглашенияСКлиентами.Расход") Тогда 
			Движение.ВидДвижения = ВидДвиженияНакопления.Расход;
			Движение.Период = ДатаОкончания;
		КонецЕсли;
		
		
		Движение.Соглашение = Соглашение;
		Движение.Номенклатура = ВыборкаДетальныеЗаписи.Номенклатура;
		Движение.Характеристика = ВыборкаДетальныеЗаписи.Характеристика;
		Движение.Количество = ВыборкаДетальныеЗаписи.Количество;
		Движение.ДатаНачала = Дата;
	КонецЦикла;
	
	Ответ = Ложь;
	
	Если Не (РольДоступна("cbr_ЗаписьЗаказаКлиентаСОтрицательнымиОстатками") или РольДоступна("ПолныеПрава")) Тогда
		Ответ = ПроверитьРегистрНаОтрицание();
	КонецЕсли;
	
	Если Ответ Тогда
		Отказ = Истина;
	КонецЕсли;
	
КонецПроцедуры

